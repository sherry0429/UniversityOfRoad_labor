<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="20dp" >


    <View
        android:id="@+id/view_0"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_below="@+id/layout_1"
        android:layout_marginLeft="30dp"
        android:background="#A6A6A6" />

    <View
        android:id="@+id/view_1"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_below="@+id/layout_2"
        android:layout_marginLeft="30dp"
        android:background="@color/orange" />

    <TextView
        android:id="@+id/Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_1"
        android:layout_marginLeft="30dp"
        android:textColor="@color/orange"
        android:textIsSelectable="true"
        android:text="地址"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/Address"
        android:layout_marginLeft="30dp"
        android:src="@drawable/timeline_green" />

    <View
        android:id="@+id/view_2"
        android:layout_width="1dp"
        android:layout_height="80dp"
        android:layout_below="@+id/image"
        android:layout_marginLeft="30dp"
        android:background="@color/pink" />

        <LinearLayout 
        android:id="@+id/linearall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginTop="-20dp"
        android:layout_toRightOf="@+id/image"
        android:background="#7DADD8E6"
        android:orientation="vertical"
>
    
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:padding="10dp" >

        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/firebrick"
            android:textIsSelectable="true"
            android:text="实\n验\n室\n名\n称"
            android:textSize="20sp" />
        
        <TextView
            android:id="@+id/Documetion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/Name"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textIsSelectable="true"
            android:text="描述"
            android:textSize="15sp" />

         <TextView
            android:id="@+id/class_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Name"
            android:textColor="@color/black"
            android:layout_below="@+id/Documetion"
            android:textIsSelectable="true"
            android:text="专业方向"
            android:textStyle="bold"
            android:textSize="15sp" />

    </RelativeLayout>

        <ImageView
            android:layout_weight="0.2"
            android:id="@+id/classimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
             />
        
   
    </LinearLayout>   
    
</RelativeLayout>