<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:background="@drawable/nightsky"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <Button 
        android:textColor="#ffffffff" 
        android:id="@id/topButton"
        android:background="@color/Cantsee" 
        android:layout_alignParentLeft="true"
        android:layout_width="30dp" 
        android:layout_height="match_parent"
        android:text="新\n的\n笔\n记\n" />
    <Button 
        android:textColor="#ffffffff" 
        android:id="@id/number"
        android:background="@drawable/number" 
        android:layout_width="30dp"
        android:layout_height="30dp" 
        android:layout_marginRight="17.0dip"
        android:layout_alignTop="@id/topButton"
        android:layout_alignParentLeft="true" />
    <com.example.universityofroad_shortcut.SwipeDismissListView
        android:id="@id/listview" 
        android:layout_width="wrap_content"
        android:layout_height="match_parent" 
        android:listSelector="#00000000"
        android:layout_toRightOf="@id/topButton"
        android:layout_alignParentRight="true" />
</RelativeLayout>